# frozen_string_literal: true

APP_RAKEFILE = File.expand_path("../test/dummy/Rakefile", __FILE__)
load('rails/tasks/engine.rake')

require "bundler/gem_tasks"
require "rake/testtask"

Rake::TestTask.new(:unit_and_integration) do |t|
  t.libs << "test"
  t.libs << "lib"
  t.test_files = FileList["test/{unit,integration}/**/*_test.rb"]
end

Rake::TestTask.new(:railtie) do |t|
  t.libs << "test"
  t.libs << "lib"

  t.test_files = FileList["test/railtie/**/*_test.rb"]
end

task(test: %i(unit_and_integration railtie))

task(default: :test)
