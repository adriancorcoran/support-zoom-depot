<%= render partial: "shared/page_title", locals: { title: "Products" } %>
<% cache @products do %>
  <%= render partial: "shared/product", collection: @products %>
<% end %>

<%
=begin
%>

<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>


<%
=end
