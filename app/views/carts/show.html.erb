
<%= render 'shared/page_title', title: t('.title') %>

<%# check for cart items %>
<% if @cart.has_line_items? %>
  <% content_for :main_heading_action_button do %>
    <%= render "shared/button", text: t('.empty_cart'), link: @cart, style_class: 'Polaris-Button--destructive', method: :delete %>
    <%= render "shared/button", text: t('.checkout'), link: new_order_path, style_class: 'Polaris-Button--primary'%>
  <% end %>
  <%= render 'table', title: t('.title') %>
<% else %>
  <%= render "flash_messages/flash_notice", title: false, message: "#{t('.no_items')}. #{link_to t('.time_to_shop'), store_index_path}".html_safe %>
<% end %>
