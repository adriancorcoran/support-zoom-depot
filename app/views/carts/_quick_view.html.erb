<%# cart quick view %>
<h2>Cart Quick View</h2>
<% if @cart.has_line_items? %>
  <%= render "carts/quick_view_line_item", line_items: @cart.line_items %>
<% else %>
  <div class="Polaris-Navigation__ListItem">
    <span class="Polaris-Navigation__Item">You have no items in your cart.</span>
  </div>
<% end %>