<%= form_tag do %> 

  <div class="field">
    <%= label_tag :name, t('.user_name') %>
    <%= text_field_tag :name, params[:name] %>
  </div>

  <div class="field">
    <%= label_tag :password, t('.password') %>
    <%= password_field_tag :password, params[:password] %>
  </div>

  <div class="actions">
    <%= submit_tag t('.submit') %>
  </div>

<% end %>
